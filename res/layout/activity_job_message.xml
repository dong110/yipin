<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/fragment_title_two" />

    <com.dong.yiping.ui.BounceScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hand"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/banner_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/gray_writer" />

            <TextView
                android:id="@+id/tv_jobmessage_jobname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/writer"
                android:padding="10dp"
                android:text="职位名称（运营实习生）"
                android:textColor="@color/black"
                android:textSize="16sp"
                 />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/gray_writer" />

            <TextView
                android:id="@+id/tv_jobmessage_salary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/writer"
                android:paddingLeft="10dp"
                android:text="1500-2999/月"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/writer"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/writer"
                    android:text="文本信息" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@color/writer"
                    android:text="文本信息" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/writer"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/writer"
                    android:text="文本信息" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@color/writer"
                    android:text="文本信息" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/writer"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/writer"
                    android:text="文本信息" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@color/writer"
                    android:text="文本信息" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/writer"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/writer"
                    android:text="文本信息" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@color/writer"
                    android:text="文本信息" />
            </LinearLayout>
        </LinearLayout>
    </com.dong.yiping.ui.BounceScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/one_blue"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_jobmessage_applyjob"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/applyinfo_btn_cur"
            android:gravity="center"
            android:padding="10dp"
            android:text="申请职位"
            android:textColor="@color/writer"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_jobmessage_collect"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/applyinfo_btn"
            android:gravity="center"
            android:padding="10dp"
            android:text="收藏职位"
            android:textColor="@color/writer"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

</LinearLayout>