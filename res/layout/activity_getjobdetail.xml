<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/fragment_title_two" />

    <com.dong.yiping.ui.BounceScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/writer"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/iv_resume_icon"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/applyinfo_img" />

                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/common_footer_bg" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <TextView
                        android:textSize="@dimen/text_size_18"
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:text="姓名" />

                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="生日" />

                </LinearLayout>
            </LinearLayout>
            
            <TextView 
                android:id="@+id/tv_intention"
                android:textSize="@dimen/text_size_17"
                android:padding="10dp"
                android:textColor="@color/red"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="求职意向"
                />
            <TextView 
                
                android:id="@+id/working"
                 android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="工作经历："
                />
            
                <TextView 
                    android:padding="10dp"
                    android:id="@+id/subdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="发布时间："
                />
                
            <TextView 
                android:padding="10dp"
                    android:id="@+id/lange"
               android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="语言水平："
                />
            <TextView 
                android:id="@+id/able"
                 android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="工作能力："
                />
        </LinearLayout>
    </com.dong.yiping.ui.BounceScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/one_blue"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_resume_invite"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/applyinfo_btn_cur"
            android:gravity="center"
            android:padding="10dp"
            android:text="邀请面试"
            android:textColor="@color/writer"
            android:textSize="@dimen/text_size_18" />

        <TextView
             android:id="@+id/tv_resume_collect"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/applyinfo_btn"
            android:gravity="center"
            android:padding="10dp"
            android:text="收藏简历"
            android:textColor="@color/writer"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

</LinearLayout>